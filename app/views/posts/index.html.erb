<div class='card'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-lg-6'>
        <div class="d-flex justify-content-start">
          <%= link_to "Search Professionals", search_professionals_path, class: 'btn btn-primary' %>
        </div>
      </div>
      <div class='col-lg-6'>
        <div class="d-flex justify-content-end">
          <%= link_to "Add New Post", new_post_path, data: {controller:"bs-modal-form"}, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="row mt-4 md-4" id="user_posts">
      <% @posts.each do |post| %>
        <%= render 'post', post: post %>
      <% end %>
      <%= paginate @posts %>
    </div>
  </div>
</div>