<%= form_with(model: @post) do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if @post.errors.any? %>
        <div class="error-area" style="color:red;">
          <h3> <%= pluralize(@post.errors.count, 'error') %> prohibited your work experience from being saved.</h3>
          <ul>
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :title, class: "mt-1" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :content, class: "mb-3 mt-3" %>
          <%= form.rich_text_area :content, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit "Save Changes", class: "btn btn-primary", data: {action: "click->bs-model#submitEnd"} %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>